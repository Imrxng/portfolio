<%- include("partials/header") %>
    <main id="maincontact">
        <h1>Contact <span>Me</span></h1>
        <section id="formAndMap">
            <form action="/" method="post" id="contactForm">
                <label for="name">Name:</label>
                <input type="text" name="name" id="name" value="<% if (post) { %><%= post.name %><% } %>">
                <label for="mail">Mail:</label>
                <input type="text" name="mail" id="email" value="<% if (post) { %><%= post.mail %><%} %>">
                <label for="text">Question:</label>
                <textarea name="text" id="text" cols="30" rows="10"><% if (post) { %><%= post.text %><% } %></textarea><br>
                <button class="Button" id="submitButton">Deliver     <i class="fa-regular fa-paper-plane" id="submitButton"></i></button>
            </form>
            <div id="map"></div>
        </section>
        <% if (message) { %>
            <p id="message" <% if (message === "Your message has been successfully sent." || message === "Uw bericht is succesvol verzonden.") { %> style="color: #dcf763" <%} %>><%= message %></p>
        <% }; %>
